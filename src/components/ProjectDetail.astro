---
// ProjectDetail.astro
import Layout from "../layouts/Layout.astro";
import LinkButton from "./LinkButton.astro";
import SectionContainer from "./SectionContainer.astro";

interface Props {
  title: string;
  title_l: string;
  description: string;
  date: string;
  imgs: string[];
  tags: any[];
  links: { titleSection: string; link: string; icon: any }[];
}

const { title, title_l, description, date, imgs, tags, links } = Astro.props;
---

<Layout>
  <main px-4>
    <SectionContainer class="pt-16 md:pt-32 pb-2 p-6">
      <span class="bg-gray-800/70 rounded-lg shadow-lg flex flex-col p-12">
        <a href="/#proyectos" class="text-white hover:text-gray-300 pb-4">
          ← Volver a la lista de proyectos
        </a>
        <h1 class="text-xl md:text-2xl lg:text-3xl font-bold text-gray-200">
          {title_l}
        </h1>
        <h4 class="text-sm lg:text-base text-gray-200 pb-5 md:pb-10">{date}</h4>
        <ul class="flex flex-row gap-2 items-center">
          {
            imgs.map((img) => (
              <li class="mb-2 w-1/2">
                <img src={img} alt={title} class="w-full rounded-lg" />
              </li>
            ))
          }
        </ul>
        <h2 class="text-lg lg:text-xl font-semibold text-gray-200 pb-4">
          Descripción de {title}
        </h2>
        <p class="text-base lg:text-lg text-gray-300 text-justify pb-3">
          {description}
        </p>
        <h2 class="text-lg lg:text-xl font-semibold text-gray-200 pb-4">
          Tecnologías utilizadas
        </h2>
        <ul class="flex flex-row gap-4 pb-4">
          {
            tags.map((tag) => {
              const Icon = tag.icon;
              return (
                <li class="flex flex-row items-center gap-2 p-2 rounded-lg bg-gray-700/70">
                  <Icon class="size-3 md:size-6" />
                  <span class="text-gray-200 text-xs md:text-base">
                    {tag.name}
                  </span>
                </li>
              );
            })
          }
        </ul>
        <ul class="flex flex-row gap-2 md:gap-4">
          {
            links &&
              links.map((link) => (
                <LinkButton href={link.link} target="_blank" class="mt-4">
                  <link.icon class="size-3 md:size-6" />
                  <span class="text-gray-200 text-xs md:text-base">
                    {link.titleSection}
                  </span>
                </LinkButton>
              ))
          }
        </ul>
      </span>
    </SectionContainer>
  </main>
</Layout>
