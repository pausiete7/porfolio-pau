  SUPABASE: {
    name: "Supabase",
    class: "bg-[#333333] text-white",
    icon: Supabase,
  },
  REACT: {
    name: "React",
    class: "bg-[#61DAFB] text-white",
    icon: React,
  },
  POSTGRE: {
    name: "PostgreSQL",
    class: "bg-[#336791] text-white",
    icon: Postgre,
  },
  JS: {
    name: "JavaScript",
    class: "bg-[#F7DF1E] text-black",
    icon: Js,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#3776AB] text-white",
    icon: Python,
  },
  C: {
    name: "C++",
    class: "bg-[#A8B9CC] text-white",
    icon: C,
  },
  ASTRO: {
    name: "Astro",
    class: "bg-[#000000] text-white",
    icon: Astr,
  },
  HTML: {
    name: "HTML",
    class: "bg-[#E34F26] text-white",
    icon: Html,
  },
  CSS: {
    name: "CSS",
