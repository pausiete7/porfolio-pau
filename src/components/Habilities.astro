    class: "bg-white/80 text-white",
    icon: SQLite,
  },
};

const BLOCS = [
  {
    title: "FRONTEND",
    tags: [
      TAGS.FLUTTER,
      TAGS.REACT,
      TAGS.ASTRO,
      TAGS.HTML,
      TAGS.CSS,
      TAGS.TAILWIND,
    ],
  },
  {
    title: "BACKEND",
    tags: [TAGS.SUPABASE, TAGS.POSTGRE, TAGS.DIGITALOCEAN, TAGS.SQLITE],
  },
  {
    title: "LENGUAJES DE PROGRAMACIÃ“N",
    tags: [TAGS.DART, TAGS.JS, TAGS.PYTHON, TAGS.C],
